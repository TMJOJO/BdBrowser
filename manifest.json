{
    "name": "BDBrowser",
    "version": "1.9.1.20230402",
    "description": "Allows you to use BetterDiscord on the web client. Some plugins might not be working correctly.",
    "homepage_url": "https://github.com/tsukasa/BdBrowser",
    "icons": {
        "16": "assets/chrome/logo.png",
        "48": "assets/chrome/logo.png",
        "128": "assets/chrome/logo.png"
    },
    "manifest_version": 3,
    "permissions": [
        "declarativeNetRequestWithHostAccess",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "options_ui": {
        "page": "assets/chrome/options.html",
        "open_in_tab": false
    },
    "background": {
        "service_worker": "dist/service.js"
    },
    "content_scripts": [{
        "matches": [
            "*://discord.com/*",
            "*://canary.discord.com/*",
            "*://ptb.discord.com/*"
        ],
        "run_at": "document_start",
        "js": [
            "dist/backend.js"
        ]
    }],
    "web_accessible_resources": [{
        "resources": [
            "assets/spinner.webm",
            "dist/betterdiscord.js",
            "dist/frontend.js",
            "dist/preload.js"
        ],
        "matches": [
            "*://*.discord.com/*"
        ]
    }]
}
